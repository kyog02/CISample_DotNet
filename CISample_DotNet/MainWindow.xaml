<Window
    x:Class="CISample_DotNet.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CISample_DotNet"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="200"
    Height="80"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBox
                Width="45"
                Height="25"
                Margin="5"
                Text="{Binding Input1}" />
            <Label
                Width="20"
                Height="25"
                Content="+" />
            <TextBox
                Width="45"
                Height="25"
                Margin="5"
                Text="{Binding Input2}" />
            <Label
                Width="20"
                Height="25"
                Content="=" />
            <Label
                Width="45"
                Height="25"
                Content="{Binding Output}" />
        </StackPanel>
    </Grid>
</Window>
